{
  "name": "ai-chat-extension",
  "displayName": "AI Chat Extension",
  "description": "VS Code extension with React-based chat interface for AI assistance and file attachments",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ai-chat-extension.openChat",
        "title": "Open AI Chat",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "ai-chat-extension.attachFile",
        "title": "Attach File to Chat"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "aiChatView",
          "name": "AI Chat Assistant",
          "when": "true"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "ai-chat-extension.openChat",
          "when": "view == aiChatView",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "ai-chat-extension.openChat",
          "title": "AI Chat: Open Chat Interface"
        }
      ]
    },
    "configuration": {
      "title": "AI Chat Extension",
      "properties": {
        "aiChatExtension.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API key for AI assistance"
        },
        "aiChatExtension.model": {
          "type": "string",
          "default": "gpt-3.5-turbo",
          "description": "OpenAI model to use",
          "enum": [
            "gpt-3.5-turbo",
            "gpt-4",
            "gpt-4-turbo"
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "css-loader": "^7.1.2",
    "eslint": "^9.25.1",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@types/markdown-it": "^14.1.2",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "markdown-it": "^14.1.0",
    "openai": "^5.7.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  }
}
